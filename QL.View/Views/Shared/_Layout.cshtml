    <script src="~/Js/lib/angular/angular.js"></script>
    <script src="~/Js/lib/angular-cookies/angular-cookies.js"></script>
    <script src="~/Js/lib/angular-resource/angular-resource.js"></script>
    <script src="~/Js/lib/angular-sanitize/angular-sanitize.js"></script>
    <script src="~/Js/lib/angular-ui-mask/dist/mask.js"></script>
    <script src="~/Js/lib/angular-ui-select/dist/select.js"></script>
    <script src="~/Js/lib/AngularJS-Toaster/toaster.js"></script>
    <script src="~/Js/lib/ngprogress/build/ngProgress.js"></script>
    <script src="~/Js/lib/angular-ui-router/release/angular-ui-router.js"></script>
    <script src="~/Js/lib/ngprogress/build/ngProgress.js"></script>
    <script src="~/Js/BaseJS.js"></script>
    <script src="~/Js/lib/moment/moment.js"></script>
    <script src="~/app/app.module.js"></script>
    <script src="~/app/app.route.js"></script>
    <script src="~/Content/assets/plugins/metismenu/js/metisMenu.min.js"></script>
    <script src="~/Content/js/custom.min.js"></script>
    @*app components*@
    <script src="~/app/components/phieudenghi/SC100PhieuDeNghiCtrl.js"></script>
    <script src="~/app/components/danhmuc/SC200DanhMucKhoaPhongCtrl.js"></script>
    <script src="~/app/components/danhmuc/SC201DanhMucCongViecCtrl.js"></script>
