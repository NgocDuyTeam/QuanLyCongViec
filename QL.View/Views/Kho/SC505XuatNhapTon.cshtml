
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row content-all-ql" data-ng-controller="SC505XuatNhapTonCtrl" ng-cloak>
    <div class="row col-sm-12">
        <div class="col-lg-2">
            <div class="input-group m-b">
                <input type="text" class="form-control" ng-model="sSearch" placeholder="Tên, mã sản phẩm" />
            </div>
        </div>
        <div class="col-lg-4">
            <div class="input-group m-b">
                <span class="input-group-addon" style="background-color: #23c6c8; ">Thời gian: </span>
                <input type="text" id="search_start_date" placeholder="__/__/____" name="search_start_date" class="form-control search_date_VN"
                       ng-model="TuNgay" model-view-value="true" ui-mask="99/99/9999">
                <span class="input-group-addon">&divide;</span>
                <input type="text" id="search_end_date" placeholder="__/__/____" name="search_end_date" class="form-control search_date_VN"
                       ng-model="DenNgay" model-view-value="true" ui-mask="99/99/9999">
            </div>
        </div>
        <div class="col-sm-2">
            <input class="btn btn-primary" type="button" style="float: right; margin-bottom: 5px; margin-right: 20px" value="Tìm kiếm" ng-click="refreshData()" />
        </div>
    </div>

    <div class="row col-lg-12" style="margin-top:15px">
        <div style="width: 100%; height: 500px">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">STT</th>
                        <th class="text-center">Mã</th>
                        <th class="text-center">Tên</th>
                        <th class="text-center">Đơn vị</th>
                        <th class="text-center">Tồn đầu kỳ</th>
                        <th class="text-center">Nhập trong kỳ</th>
                        <th class="text-center">Xuất trong kỳ</th>
                        <th class="text-center">Tồn cuối kỳ</th>
                    </tr>
                </thead>
                <tbody>
                    <tr data-ng-repeat="sp in DsGiaoDich">
                        <td class="text-center">{{$index+1}}</td>
                        <td class="">{{sp.Ma}}</td>
                        <td>{{sp.TenSanPham}}</td>
                        <td>{{sp.DonVi}}</td>
                        <td class="text-right">{{sp.SLDauKy}}</td>
                        <td class="text-right">{{sp.SLNhap}}</td>
                        <td class="text-right">{{sp.SLXuat}}</td>
                        <td class="text-right">{{sp.SLCuoiKy}}</td>
                    </tr>
                    <tr ng-if="DsGiaoDich.length == 0">
                        <td class="text-center" colspan="8">Không có dữ liệu</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
