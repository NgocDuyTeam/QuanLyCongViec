
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row content-all-ql" data-ng-controller="SC203DanhMucSanPhamCtrl" ng-cloak>
    <div class="row col-sm-12">
        <div class="col-lg-2">
            <div class="input-group m-b">
                <input type="text" class="form-control" ng-model="sSearch" placeholder="Tên, mã sản phẩm" />
            </div>
        </div>
        <div class="col-sm-2">
            <input class="btn btn-primary" type="button" style="float: right; margin-bottom: 5px; margin-right: 20px" value="Tìm kiếm" ng-click="refreshData(1)" />
        </div>
        <div class="col-sm-2">
            <input ng-if="!IsKhoa" class="btn btn-primary" type="button" style="" value="Thêm" ng-click="ShowAddOrUpdate()" />
        </div>
    </div>

    <div class="row col-lg-12" style="margin-top:15px">
        <div style="width: 100%; height: 500px">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">STT</th>
                        <th class="text-center">Mã sản phẩm</th>
                        <th class="text-center">Tên sản phẩm</th>
                        <th class="text-center">Đơn vị tính</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <tr data-ng-repeat="sp in DSSanPham">
                        <td class="text-center">{{$index+1+ iPageSize*(iPageIndex-1)}}</td>
                        <td>{{sp.Ma}}</td>
                        <td>{{sp.TenSanPham}}</td>
                        <td class="text-center">{{sp.TenDonVi}}</td>
                        <td class="text-center">
                            <a ng-click="ShowAddOrUpdate(sp)" title="Sửa">
                                <i class="fas fa-pencil-alt">Sửa</i>
                            </a>&nbsp;&nbsp;
                            <a ng-if="!IsKhoa" ng-click="DeleteSanPham(sp.Id)"><i class="fa fa-trash" title="Xóa">Xóa</i> </a>
                        </td>
                    </tr>
                    <tr ng-if="DSSanPham.length == 0">
                        <td class="text-center" colspan="5">Không có dữ liệu</td>
                    </tr>
                </tbody>
            </table>
            <div class="row" ng-visible="{{iTotalPage>1}}">
                <div class="col-sm-12" style="float: right">
                    <div class="dataTables_paginate paging_simple_numbers">
                        <ul class="pagination" id="lstPage"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="popup" style="display: none;width:800px" id="popupSanPham" data-key-trap>
        <h4>
            Thêm mới
            <a class="action close popup_close col-lg-2 b-close" my-click-once data-ng-click="closePopup()" title="Đóng của sổ">
                (Đóng)
            </a>
        </h4>
        <div class="popup_content" style="">
            <div class="row" style="margin-left:0px; margin-right:0px;">
                <div class="col-lg-12" style="padding-top:3px">
                    <div class="col-lg-3">
                        Tên sản phẩm
                    </div>
                    <div class="col-lg-9">
                        <input id="txtTen" class="form-control" ng-model="SanPham.TenSanPham" />
                    </div>
                </div>
                <div class="col-lg-12" style="padding-top:3px">
                    <div class="col-lg-3">
                        Đơn vị tính
                    </div>
                    <div class="col-lg-9">
                        <ui-select ng-model="SanPham.IdDonVi" reset-search-input="false">
                            <ui-select-match placeholder="Chọn đơn vị ... ">{{$select.selected.TenTuDien}}</ui-select-match>
                            <ui-select-choices repeat="dv.Id as dv in DSDonVitinh | filter: $select.search" value="{{$select.selected.Id}}">
                                <div ng-bind-html="dv.TenTuDien | highlight:$select.search"></div>
                            </ui-select-choices>
                        </ui-select>
                    </div>
                </div>
                <div class="col-lg-12" style="padding-top:3px">
                    <div class="col-lg-3">
                        Mô tả 
                    </div>
                    <div class="col-lg-9">
                        <textarea id="txtMoTaCongViec" class="form-control" ng-model="SanPham.GhiChu" rows="3"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12" style="margin-bottom:20px;text-align:right">
            <button class="btn btn-primary" ng-disabled="isDisabled" ng-click="saveSanPham()">Lưu</button>
            <button class="btn" ng-click="closePopup()">Đóng</button>
        </div>
    </div>
</div>
