
@{
    ViewBag.Title = "SC200a_AddDanhMucKhoaPhong";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Thêm mới Khoa Phòng</h4>
<div class="row content-all-ql" data-ng-controller="SC200DanhMucKhoaPhongCtrl" ng-cloak>
    <div class="row col-lg-12" style="margin-top:15px">
        <div style="width: 70%; height: 500px">
            <form class="form-horizontal" novalidate name="frmAddKhoaPhong" role="form" ng-submit="AddKhoaPhong()">
                <div class="box-body">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Mã Khoa Phòng</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" required name="ma" ng-model="KhoaPhong.Ma">
                            <span ng-show="frmAddKhoaPhong.ma.$invalid" class="has-error">Phải nhập Mã KP</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Tên danh mục</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" required name="ten" ng-model="KhoaPhong.Ten">
                            <span ng-show="frmAddKhoaPhong.ten.$invalid" class="has-error">Phải nhập tên Khoa Phòng</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Tên danh mục</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" required name="name" ng-model="KhoaPhong.GhiChu">

                        </div>
                    </div>
                </div><!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" ng-disabled="frmAddKhoaPhong.$invalid" class="btn btn-success pull-right">Lưu</button>
                </div><!-- /.box-footer -->
            </form>
        </div>
    </div>
</div>
